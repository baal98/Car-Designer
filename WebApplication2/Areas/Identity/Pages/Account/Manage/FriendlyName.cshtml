@page
@model FriendlyNameModel
@{
    ViewData["Title"] = "Friendly Name";
    ViewData["ActivePage"] = ManageNavPages.FriendlyName;
    ViewData["BodyClass"] = "canvas-body";
}

<style>
    .canvas-body {
        background-color: navajowhite;
    }

        .canvas-body nav.navbar {
            background-color: cornflowerblue;
        }
</style>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FriendlyName" class="form-control" disabled />
                <label asp-for="Input.FriendlyName" class="form-label"></label>
                <span asp-validation-for="Input.FriendlyName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FriendlyName" class="form-control" required="true" />
                <label asp-for="Input.FriendlyName" class="form-label"></label>
                <span asp-validation-for="Input.FriendlyName" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

