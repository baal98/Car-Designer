@using static WebConstants;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MILLENIUM Advertising Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />


    <link rel="stylesheet" href="~/css/loginCSS.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lazy.css" asp-append-version="true">

    <link rel="stylesheet" href="~/Carousel/css/templatemo_style.css" asp-append-version="true" />

    <link rel="stylesheet" type="text/css" href="~/Carousel/css/ddsmoothmenu.css" />
    <link href="~/css/fancy-header.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" @*integrity="sha512-x0CK+5+c8CQyaknXvLDCqB6yJ6d5m2y3ZPX3RyWe+dYHHBNps2b+uxvJyC4yEU/LV9oIYdVQG0Asw+ru2I4HWQ=="*@ crossorigin="anonymous" />

</head>

<body class="custom  @ViewData["BodyClass"]">
<header>
    @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient border-bottom box-shadow mb-1 @((ViewContext.RouteData.Values["action"]?.ToString() == "SPAView") ? "navbar-fullwidth" : "")" id="navbar">*@
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient border-bottom box-shadow mb-1 
@((ViewContext.RouteData.Values["action"]?.ToString() == "SPAView" || ViewContext.RouteData.Values["action"]?.ToString() == "SPA_FreeUse") ? " navbar-fullwidth" : "" )" id="navbar">
        <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-controller="Users" asp-action="AllUsers">
                                        <img class="logo-spin" src="~/Images/WRAP LOGO MILLENIUM1.png" alt="Logo" style="width: 70px; height: 40px;">
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="AllUsers" style="color: navajowhite; font-size: 20px; padding-right: 20px">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="SortedOrders" style="color: navajowhite; font-size: 20px; padding-right: 20px">Orders</a>
                                </li>
                            }
                            if (User.IsInRole("Customer") && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-controller="CanvasMvc" asp-action="Index">
                                        <img class="logo-spin" src="~/Images/WRAP LOGO MILLENIUM1.png" alt="Logo" style="width: 70px; height: 40px;">
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a id="navButton" class="nav-link" asp-controller="CanvasMvc" asp-action="Index" style="color: navajowhite; font-size: 20px; padding-right: 20px">Sticker Studio</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Project" asp-action="SharedProjects" style="color: navajowhite; font-size: 20px; padding-right: 20px">Gallery</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Chat" asp-action="Chat" style="color: navajowhite; font-size: 20px; padding-right: 20px">Chat</a>
                            </li>
                            if (User.IsInRole("Customer") && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="UserDashboard" style="color: navajowhite; font-size: 20px; padding-right: 20px">Dashboard</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="UserGuide" style="color: navajowhite; font-size: 20px; padding-right: 20px">User Guide</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="ContactUs" style="color: navajowhite; font-size: 20px; padding-right: 20px">Contact Us</a>
                                </li>

                                <li class="nav-item">
                                    <a class=nav-link asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index">
                                        <svg width="25" height="25" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                                        </svg>
                                        <span class="badge badge-pill badge-danger">@await Component.InvokeAsync("CartCount")</span>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                                    <img class="logo-spin" src="~/Images/WRAP LOGO MILLENIUM1.png" alt="Logo" style="width: 70px; height: 40px; margin-top: 5px;">
                                </a>
                            </li>
                            <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: navajowhite; font-size: 30px;">MILLENIUM</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <li class="nav-item">
                                <a id="navButton" class="nav-link" asp-controller="CanvasMvc" asp-action="SPA_FreeUse" style="color: navajowhite; font-size: 20px; padding-right: 20px">Sticker Studio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="UserGuide" style="color: navajowhite; font-size: 20px; padding-right: 20px">User Guide</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="ContactUs" style="color: navajowhite; font-size: 20px;">Contact Us</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form class="d-flex hidden">
                            <div class="input-group">
                                <a class="btn btn-toolbar" style="color: peru" href="/Chat/Chat">
                                    <img id="notificationIcon" src="~/images/chatIcon.png" alt="Chat" style="width: 50px; height: 50px; margin-right: 15px;">
                                    <span id="messageCount"></span>
                                </a>
                            </div>
                        </form>

                        @if (User.IsInRole("Admin"))
                        {
                            <form class="d-flex form-inline ml-auto" asp-controller="Search" asp-action="UserSearch" method="get">
                                <div class="d-flex align-items-center">
                                    <input class="form-control me-2" name="searchTerm" type="search" placeholder="Search in Users" aria-label="Search">
                                    <button class="btn btn-toolbar" style="color: navajowhite" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        }
                        @if (User.IsInRole("Customer") && !User.IsInRole("Admin"))
                        {
                            <form class="d-flex form-inline ml-auto" asp-controller="Search" asp-action="Index" method="get">
                                <div class="d-flex align-items-center">
                                    <input class="form-control me-2" name="searchTerm" type="search" placeholder="Search in Gallery" aria-label="Search">
                                    <button class="btn btn-toolbar" style="color: navajowhite" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        }
                    }
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>

@*<div class="@((ViewContext.RouteData.Values["action"]?.ToString() == "SPAView") ? "container-fluid" : "container")">*@
<div class="@((ViewContext.RouteData.Values["action"]?.ToString() == "SPAView" || ViewContext.RouteData.Values["action"]?.ToString() == "SPA_FreeUse") ? "container-fluid" : "container")">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<div id="spinner" class="ring" style="display: none;">
        Loading
        <span></span>
    </div>

    <footer>
        <div id="templatemo_footer_wrapper">
            <div id="templatemo_footer">
                Copyright &copy; MILLENIUM ADVERTISING Ltd. Worldwide @ReleaseYear
                @if (DateTime.UtcNow.Year != ReleaseYear)
                {
                    @Html.Encode($" - {DateTime.UtcNow.Year}")
                }
            </div>
        </div>
    </footer>

    <script src="~/js/jquery.min.js"></script>

    <partial name="_LayoutScripts" />

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
